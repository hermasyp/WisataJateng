<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/cvItemDetail"
        android:layout_marginBottom="8dp"
        android:elevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgDetail"
                    android:scaleType="centerCrop"
                    android:src="@drawable/lawangsewu"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:maxHeight="250dp"
                    android:foreground="@drawable/gradient_imageview"/>
                <LinearLayout
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txtNamaTempat"
                        android:textStyle="bold"
                        android:textColor="@color/textColor"
                        android:textSize="20dp"
                        android:text="Lawang Sewu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/txtKetTempat"
                        android:textStyle="bold"
                        android:textColor="@color/textColor"
                        android:text="Foto saat Keadaan malam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </FrameLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>